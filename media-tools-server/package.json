{
  "name": "media-tools-mcp-server",
  "version": "0.1.2",
  "description": "MCP server for media operations including image search, video search, and media understanding",
  "type": "module",
  "author": "Godzilla675",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Godzilla675/agentic-ai-tool-suite.git",
    "directory": "media-tools-server"
  },
  "keywords": [
    "mcp",
    "model-context-protocol",
    "media",
    "image-search",
    "video-search",
    "youtube"
  ],
  "bin": {
    "media-tools-server": "./build/index.js"
  },
  "files": [
    "build"
  ],
  "scripts": {
    "build": "tsc && node -e \"require('fs').chmodSync('build/index.js', '755')\"",
    "prepare": "npm run build",
    "watch": "tsc --watch",
    "inspector": "npx @modelcontextprotocol/inspector build/index.js"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.0",
    "@modelcontextprotocol/sdk": "0.6.0",
    "@types/mime-types": "^2.1.4",
    "axios": "^1.8.4",
    "mime-types": "^3.0.1",
    "youtube-transcript": "^1.2.1",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.11.24",
    "typescript": "^5.3.3"
  }
}
