{
  "mcpServers": {
    "information-retrieval": {
      "command": "npx",
      "args": ["-y", "information-retrieval-mcp-server"],
      "env": {
        "GOOGLE_API_KEY": "YOUR_GOOGLE_API_KEY_HERE",
        "GOOGLE_CSE_ID": "YOUR_GOOGLE_CUSTOM_SEARCH_ENGINE_ID_HERE"
      },
      "disabled": false,
      "autoApprove": []
    },
    "media-tools": {
      "command": "npx",
      "args": ["-y", "media-tools-mcp-server"],
      "env": {
        "UNSPLASH_ACCESS_KEY": "YOUR_UNSPLASH_API_KEY_HERE",
        "GEMINI_API_KEY": "YOUR_GEMINI_API_KEY_HERE"
      },
      "disabled": false,
      "autoApprove": [],
      "alwaysAllow": [
        "image_search",
        "download_image",
        "video_search",
        "video_understanding",
        "image_understanding",
        "image_generation"
      ]
    },
    "presentation-creator": {
      "command": "npx",
      "args": ["-y", "presentation-creator-mcp-server"],
      "env": {},
      "disabled": false,
      "autoApprove": []
    },
    "pdf-creator": {
      "command": "C:/absolute/path/to/unified-mcp-suite/pdf-creator-server/.venv/Scripts/python.exe",
      "args": ["C:/absolute/path/to/unified-mcp-suite/pdf-creator-server/pdf_creator_server.py"],
      "env": {},
      "disabled": false,
      "autoApprove": [],
      "alwaysAllow": []
    }
  }
}
